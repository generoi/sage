{% extends 'layout/base.twig' %}

{% block content %}
  <div class="post post--{{template_type}} post--type-{{post.post_type}}" id="post-{{post.ID}}">
    <div class="post__content-wrapper row">
      {% block post__content %}
        <div class="post__content column small-12">
          {{post.content}}
        </div>
      {% endblock %}
    </div>
    {% block post__after %}
      {# for an expanded layout add the following classes: expanded collapse #}
      <div class="post__sections row">
        {% include 'parts/section-listing.twig' %}
      </div>
    {% endblock %}
  </div>
{% endblock %}
