{
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=development run-s mix",
    "build:production": "cross-env NODE_ENV=production run-s clean mix",
    "start": "cross-env NODE_ENV=development run-s \"mix -- --watch\"",
    "hot": "cross-env NODE_ENV=development run-s build mix:hot",
    "mix": "webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:hot": "webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:views": "rimraf storage/framework/views/*.php",
    "lint": "run-s -c lint:*",
    "lint:scripts": "eslint resources/assets/scripts",
    "lint:styles": "stylelint \"resources/assets/**/*.{vue,css,sass,scss,sss,less}\"",
    "test": "run-s -c lint"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "plugin:genero/recommended",
      "plugin:genero/wordpress",
      "plugin:vue/essential"
    ]
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2",
    "@wordpress/babel-preset-default": "^4.2.0",
    "babel-eslint": "^10.0.1",
    "browser-sync": "^2.26",
    "browser-sync-webpack-plugin": "2.2",
    "classnames": "^2.2.6",
    "cross-env": "^5.2",
    "eslint": "^5.11",
    "eslint-plugin-genero": "git+https://github.com/generoi/eslint-plugin-genero.git",
    "eslint-plugin-import": "^2.14",
    "eslint-plugin-vue": "^5.2.2",
    "laravel-mix": "^4.0",
    "laravel-mix-export-tailwind-config": "^0.1.2",
    "laravel-mix-wp-blocks": "^0.1.4",
    "npm-run-all": "^4.1",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^3.1.1",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.6.0",
    "postcss-scss": "^2.0.0",
    "prop-types": "^15.7.2",
    "rimraf": "^2.6",
    "sass": "^1.21",
    "sass-loader": "7.*",
    "stylelint": "^10.1",
    "stylelint-config-standard": "^18.2",
    "tailwindcss": "^1.0.1",
    "tailwindcss-gutenberg": "git+https://github.com/generoi/tailwindcss-gutenberg.git",
    "vue-template-compiler": "^2.6.10",
    "write-webpack-plugin": "^1.1.0"
  },
  "dependencies": {
    "jquery": "^3.4",
    "js-dom-router": "^1.0",
    "vue": "^2.6.10",
    "vue-a11y-utils": "^0.6.1"
  }
}
