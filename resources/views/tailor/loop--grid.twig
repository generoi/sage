{% extends 'tailor/loop--list.twig' %}

{% block content %}
  <div class="row row-grid small-up-{{atts.items_per_row_mobile}} medium-up-{{atts.items_per_row_tablet}} large-up-{{atts.items_per_row}}">
    {% for post in posts %}
      <div class="column">
        {% include ['teasers/teaser-'~post.post_type~'.twig', 'teasers/teaser.twig'] %}
      </div>
    {% endfor %}
  </div>
{% endblock %}
