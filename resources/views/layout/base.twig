<!doctype html>
<html class="no-js" {{site.language_attributes}}>
{% block html_head_container %}
  <head>
    {% include 'layout/head.twig' %}
    {% block head %}
    {% endblock %}
  </head>
{% endblock %}
  <body class="{{body_class}} sticky-footer" data-template="base.twig">

    <header id="header" class="l-header headroom sticky-footer__header" data-toggler=".active">
      {% include 'layout/header.twig' %}
    </header>

    <div class="sticky-footer__content">
      <div class="l-hero">
        {% block hero %}
          {% embed 'layout/hero.twig' %}{% endembed %}
        {% endblock %}
      </div>

      <div role="document">
        <section id="content" role="main" class="l-content-wrapper fade-in is-animating">
        {% if password_required %}
          {% block password %}
            {% include 'parts/password.twig' %}
          {% endblock %}
        {% else %}
          {% block content %}
            {{__('Sorry, no content', 'theme')}}
          {% endblock %}
        {% endif %}
        </section>
      </div>

    </div>

    <div class="sticky-footer__footer">
      {% if sidebar_content_below %}
        <div class="l-siderbar-content-below grid-container">
          <div class="grid-x grid-margin-y grid-margin-x align-center">
            {{sidebar_content_below}}
          </div>
        </div>
      {% endif %}

      <footer id="footer" class="l-footer" role="contentinfo">
        {% include 'layout/footer.twig' %}
      </footer>
    </div>
    {{ function('wp_footer') }}
  </body>
</html>
